Options -MultiViews
RewriteEngine On

RewriteEngine On

# ─── 1) .php ile gelen her isteği uzantısız hâline 301 ile zorunlu yönlendir ───
# Örnek:  GET /foo.php?x=1  → 301 → /foo?x=1
RewriteCond %{THE_REQUEST} \s/([^?\s]+)\.php [NC]
RewriteRule ^ /%1 [R=301,L]

# ─── 2) Statik dosya veya gerçek klasörse dokunma ───
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# ─── 3) forgot-password token kuralın ───
# /forgot-password/XYZ → forgot-password.php?token=XYZ
RewriteRule ^forgot-password/([A-Za-z0-9\-]+)/?$ forgot-password.php?token=$1 [L,QSA]

# ─── 4) Uzantısız URL’leri .php veya .html’e dahili yönlendir ───
# /foo → foo.php   (eğer foo.php varsa)
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^\./]+)/?$ $1.php [L,QSA]

# /bar → bar.html (eğer bar.html varsa)
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^([^\./]+)/?$ $1.html [L,QSA]

DirectoryIndex ana-sayfa.html ana-sayfa.php app.php

